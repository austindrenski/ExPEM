<Window x:Class="ExPEM.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="/ExPEM.Desktop;component/Resources/ExPEM_icon.ico"
        Title="MainWindow" Height="350" Width="700" UseLayoutRounding="True" SnapsToDevicePixels="True">
    <Grid>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" Background="LightGray" AlternatingRowBackground="AliceBlue" HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray">
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid x:Name="SubGrid" AutoGenerateColumns="False" Background="LightGray" AlternatingRowBackground="AliceBlue" HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray"/>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Window>
